<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <SonarQubeTestProject>True</SonarQubeTestProject>
    <IsPackable>false</IsPackable>
    <OutputPath>..\..\bin\Tests\UT\$(Configuration)</OutputPath>
    <IsPublishable>false</IsPublishable>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <IsTestProject>true</IsTestProject>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Environment\TestScript.cs" />
    <Compile Remove="UT_NodeJsHost.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.7.2" />
    <PackageReference Include="NSubstitute" Version="5.1.0" />
    <PackageReference Include="NSubstitute.Analyzers.CSharp" Version="1.0.16">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="NUnit" Version="3.13.3" />
    <PackageReference Include="NUnit3TestAdapter" Version="4.5.0" />
    <PackageReference Include="NUnit.Analyzers" Version="3.6.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="coverlet.collector" Version="6.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Node.js.redist" Version="17.2.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Environment\TestScript.cs">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="Integration\IT_NodeJs.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Libs\BookGen.Contents\BookGen.Contents.csproj" />
    <ProjectReference Include="..\..\Libs\BookGen.Domain\BookGen.Domain.csproj" />
    <ProjectReference Include="..\..\Libs\BookGen.Interfaces\BookGen.Interfaces.csproj" />
    <ProjectReference Include="..\..\Prog\BookGen\BookGen.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Environment\full.html">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Environment\LongNodeJs.js">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Environment\SimpleNodeJs.js">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Environment\Test.css">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Environment\Test.js">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Environment\Test.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Environment\TestFile.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="NodeExe" AfterTargets="Build">
    <Copy SourceFiles="$(PkgNode_js_redist)\tools\win-x64\node.exe" DestinationFolder="$(OutDir)" />
  </Target>

</Project>
