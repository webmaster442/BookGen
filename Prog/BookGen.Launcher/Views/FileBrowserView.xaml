<UserControl
    x:Class="BookGen.Launcher.Views.FileBrowserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:BookGen.Launcher.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fileBrowser="clr-namespace:BookGen.Launcher.ViewModels.FileBrowser"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Row="0"
            Grid.ColumnSpan="9"
            Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Margin="10,0"
                VerticalAlignment="Center"
                Text="{Binding CurrentDir}" />
            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal">
                <Button
                    Margin="5"
                    Command="{Binding RefreshCommand}"
                    Content="Refresh" />
                <Button
                    Margin="5"
                    Command="{Binding StartShellCommand}"
                    CommandParameter="{Binding CurrentDir}"
                    Content="Open folder in Terminal" />
                <Button
                    Margin="5"
                    Command="{Binding RunVsCodeCommand}"
                    CommandParameter="{Binding CurrentDir}"
                    Content="Open folder in VS Code" />
            </StackPanel>
        </Grid>
        <controls:TreeViewMVVM
            Grid.Row="1"
            Grid.Column="0"
            ItemSelectedCommand="{Binding TreeItemSelectedCommand}"
            ItemsSource="{Binding TreeItems}">
            <controls:TreeViewMVVM.ItemTemplate>
                <HierarchicalDataTemplate
                    DataType="{x:Type fileBrowser:FileBrowserTreeViewModel}"
                    ItemsSource="{Binding SubItems}">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox
                            Width="48"
                            Height="48">
                            <ContentPresenter Content="{StaticResource icon-folder}" />
                        </Viewbox>
                        <TextBlock
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Text="{Binding Name}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </controls:TreeViewMVVM.ItemTemplate>
        </controls:TreeViewMVVM>
        <DataGrid
            Grid.Row="1"
            Grid.Column="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserSortColumns="True"
            ItemsSource="{Binding Items}"
            SelectionMode="Single"
            SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Icon">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Viewbox
                                Width="96"
                                Height="96">
                                <ContentPresenter Content="{Binding Converter={controls:IconConverter}}" />
                            </Viewbox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Width="1*"
                    Binding="{Binding Name}"
                    Header="Name"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding Extension}"
                    Header="Extension"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding Size, Converter={controls:FileSizeConverter}}"
                    Header="Size"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding ModificationDate}"
                    Header="Modified"
                    IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
