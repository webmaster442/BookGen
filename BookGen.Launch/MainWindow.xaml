<Window
    x:Class="BookGen.Launch.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookGen.Launch"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="AppWindow"
    Title="BookGen Launcher"
    Width="1280"
    Height="720"
    Background="{StaticResource AppBackground}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
            <!--  Content  -->
            <RowDefinition Height="590" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="320" />
        </Grid.ColumnDefinitions>
        <Grid
            x:Name="WindowChrome"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Background="{StaticResource AppBackground}"
            MouseDown="WindowChrome_MouseDown">
            <!--  Window chrome  -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" />
            <Button
                x:Name="WindowChromeMinimize"
                Grid.Column="2"
                Click="WindowChromeMinimize_Click"
                Content="{StaticResource IconMinimize}"
                Style="{StaticResource ChromeButton}"
                ToolTip="Minimize" />
            <Button
                x:Name="WindowChromeClose"
                Grid.Column="3"
                Click="WindowChromeClose_Click"
                Content="{StaticResource IconClose}"
                Style="{StaticResource ChromeCloseButton}"
                ToolTip="Close" />
        </Grid>

        <!--  Header  -->
        <Border
            Grid.Row="1"
            Grid.ColumnSpan="2"
            BorderBrush="{StaticResource Border}"
            BorderThickness="0,0,0,2">
            <TextBlock
                Style="{StaticResource HeaderText}"
                Text="BookGen Launcher" />
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            BorderBrush="{StaticResource Border}"
            BorderThickness="0,0,2,0">
            <ItemsControl>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel
                            IsVirtualizing="True"
                            VirtualizationMode="Recycling" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.Template>
                    <ControlTemplate TargetType="ItemsControl">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer
                                Padding="{TemplateBinding Padding}"
                                CanContentScroll="True"
                                Focusable="False"
                                HorizontalScrollBarVisibility="Auto"
                                VerticalScrollBarVisibility="Auto">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </ItemsControl.Template>
            </ItemsControl>
        </Border>

        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Margin="20,0,0,0">
            <TextBlock
                Style="{StaticResource SmallHederText}"
                Text="Actions" />
            <Button
                Content="Add folder..."
                Style="{StaticResource LinkButton}" />
            <Button
                Content="Clear recent folders..."
                Style="{StaticResource LinkButton}" />
            <Button
                Content="Visit website..."
                Style="{StaticResource LinkButton}" />
        </StackPanel>

    </Grid>
</Window>
